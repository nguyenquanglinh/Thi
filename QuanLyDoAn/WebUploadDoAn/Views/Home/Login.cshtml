<h4>Đăng nhập</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Login" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Tên đăng nhập</label>
                <input id="TenSV" name="TenSV" class="form-control" />
                <span class="text-danger">Tên đăng nhập</span>
            </div>
            <div class="form-group">
                <label class="control-label">Mật khẩu</label>
                <input id="PassWord" name="PassWord" class="form-control" type="password"/>
                <span class="text-danger">Mật khẩu đăng nhập</span>
            </div>
            <div class="form-group">
                <label class="control-label">Mã sinh viên/giáo viên</label>
                <input id="MaSV" name="MaSV" class="form-control" />
                <span class="text-danger">Mã sinh viên</span>
            </div>
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

